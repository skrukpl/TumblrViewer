<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/whiteSimple"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp"
    android:layout_margin="@dimen/_5sdp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.tumblrviewer.helpers.UI.TumblrTextView
            android:id="@+id/feed_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textColor="@color/greyStd"/>
        <com.tumblrviewer.helpers.UI.TumblrTextView
            android:id="@+id/feed_regular_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/feed_date_tv"
            android:layout_margin="@dimen/_5sdp"
            android:textSize="14sp"
            android:textColor="@color/greyStd"/>
        <com.tumblrviewer.helpers.UI.TumblrTextView
            android:id="@+id/feed_tags_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/feed_quote_tv"
            android:layout_margin="@dimen/_5sdp"
            android:textSize="12sp"
            android:textColor="@color/blueDarker"/>


    </RelativeLayout>
    

</android.support.v7.widget.CardView>